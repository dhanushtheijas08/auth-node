{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "react-jsx",
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src", "prisma"],
  "ts-node": {
    "esm": true
  }
}
